<Window x:Class="UventaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UventaApp"
        mc:Ignorable="d"
        Title="Авторизиация" Height="350" Width="200">

    <StackPanel Orientation="Vertical">
        <Image Source="/Resources/Images/brand.png"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Style="{DynamicResource H1}" HorizontalAlignment="Center" Content="Авторизация"/>
            <Label Style="{DynamicResource H4}" Content="Логин"/>
            <TextBox x:Name="tbLoign" Style="{DynamicResource TB4}" TextChanged="textChanged" Focusable="True"/>
            <Label Style="{DynamicResource H4}" Content="Пароль"/>
            <TextBox x:Name="tbPass" Style="{DynamicResource TB4}"/>
            <Button x:Name="btnAuth" Content="Войти как гость" HorizontalAlignment="Right" Style="{DynamicResource btnStandart}" Click="btnAuth_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
